@model Artist

<div class="user-profile-page">
    <div class="card radius-15">
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-lg-4 border-right">
                    <div class="d-md-flex align-items-center">
                        <div class="mb-md-0 mb-3">
                            <img src="@Model.ArtistImageUrl" class="rounded ml-3 shadow" width="130" height="200" style="object-fit: cover">
                        </div>
                        <div class="ms-md-4 flex-grow-1">
                            <div class="d-flex align-items-center mb-1">
                                <h4 class="mb-0">@Model.ArtistName</h4>
                            </div>
                            <a href="/Management/Artist/Edit/@Model.Id" type="button" class="btn btn-warning m-1 px-5">Edit</a>
                            <a href="/Management/Artist/Index" type="button" class="btn btn-secondary m-1 px-5">Cansel</a>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-4 border-right text-end">
                    <div class="d-md-flex align-items-center">
                        <div class="ms-md-4 flex-grow-1">
                            <div class="d-flex align-items-center mb-1">
                                <p class="mb-0 ms-auto text-end">Created Date <br /> @Model.CreateDate.ToString("dd MMMM yyyy")</p><br />
                                <p class="mb-0 ms-auto text-end">Update Date <br /> @Model.UpdateDate.ToString("dd MMMM yyyy")</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-4">
                    <table class="table table-sm table-borderless mt-md-0 mt-3">
                        <tbody>
                            <tr>
                                <h5 class ="mb-0">Details</h5>
                            </tr>
                            <tr>
                                <th>Birth Date:</th>
                                <td>@Model.ArtistBirthDate.ToString("dd/MMMM/yyyy")</td>
                            </tr>
                            <tr>
                                <th>About:</th>
                            </tr>
                            <tr>
                                <td>@Html.Raw(Model.ArtistDescription)</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <!--end row-->
        </div>
    </div>
</div>
<h6 class="mb-0 text-uppercase">Activities</h6>
<hr />
<div class="row">
    @{
        int rowNumber = 1;
    }
    @foreach (var item in Model.Activities)
    {
        if (rowNumber == 1)
        {
            <div class="col-12 col-lg-6 col-xl-6">
                <div class="card">
                    <div class="row no-gutters">
                        <div class="col-md-4">
                            <img src="@item.ActivityImageUrl" height="320" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">@item.ActivityName</h5>
                                <p class="card-text">@Html.Raw(@item.ActivityDescription)</p>
                                <p class="card-text">
                                    <a class="text-muted" href="/Management/Category/Details/@item.Category.Id">Category: @item.Category.CategoryName</a>
                                    <br />
                                    <small class="text-muted">Created Date <br />@item.CreateDate</small>
                                    <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                        <a href="/Management/Activity/Edit/@item.Id" type="button" class="btn btn-warning">Edit</a>
                                        <a href="/Management/Activity/Details/@item.Id" type="button" class="btn btn-success">Details</a>
                                    </div>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            rowNumber = 0;
        }
        else
        {
            <div class="col-12 col-lg-6 col-xl-6">
                <div class="card">
                    <div class="row no-gutters">
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">@item.ActivityName</h5>
                                <p class="card-text">@Html.Raw(@item.ActivityDescription)</p>
                                <p class="card-text">
                                    <a class="text-muted" href="/Management/Category/Details/@item.Category.Id">Türü: @item.Category.CategoryName</a>
                                    <br />
                                    <small class="text-muted">Eklenme Tarihi <br />@item.CreateDate</small>
                                    <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                        <a href="/Management/Activity/Edit/@item.Id" type="button" class="btn btn-warning">Edit</a>
                                        <a href="/Management/Activity/Details/@item.Id" type="button" class="btn btn-success">Details</a>
                                    </div>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <img src="@item.ActivityImageUrl" height="320" alt="...">
                        </div>
                    </div>
                </div>
            </div>
            rowNumber = 1;
        }
    }
</div>